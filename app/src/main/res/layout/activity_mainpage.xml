<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainpageActivity">
    <!--식당 리스트 버튼-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id_textview"/>
    <ImageButton
        android:id="@+id/image_back"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/small_image"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/restaurant"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="식당 리스트"
            android:textColor="@color/deep_orange_A700"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/vision"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_border3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="비전타워 식당"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/art"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_border3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="예술 체육대학 식당"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edu"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_border3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="교육대학원 식당"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/stu"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_border3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="학생생활관 식당"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:id="@+id/recommend"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/hand_resizing"
        android:scaleType="fitCenter"
        android:background="@drawable/button_border_2"
        android:textSize="50dp"
        android:text=" 추천 메뉴"
        android:textColor="@color/red_A700"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recInfo"
        android:text="@string/recInfo"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        />

</LinearLayout>