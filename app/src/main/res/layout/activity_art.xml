<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".pages.MainpageActivity">
    <!--식당 리스트 버튼-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id_textview"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"/>
    <!--    뒤로가기 버튼-->
    <ImageButton
        android:id="@+id/image_back"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:src="@drawable/small_image"
        android:background="@null" />
    <!--식당 이름, 별점-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/art_title" />

    </LinearLayout>
    <!--    식당위치, 지도 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RatingBar
            android:id="@+id/rating"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@color/star_yellow"
            android:rating="3"
            android:stepSize="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="식당 위치: 예술대학1층" />

        <Button
            android:id="@+id/map"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_border_2"
            android:padding="2dp"
            android:text="위치보기"
            android:textColor="@color/deep_orange_A700"
            android:textSize="10dp" />

    </LinearLayout>
    <!--식당 사진-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/art_img1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <!--건의, 인스타 방문 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_suggest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_2"
            android:textColor="@color/red_400"
            android:textStyle="bold"
            android:text="건의하기"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btn_insta"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="인스타그램 방문"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/today"
        android:text="오늘의 식단"
        android:textColor="@color/deep_orange_A700"
        android:background="@drawable/button_border_2"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/week"
        android:text="이번주 식단"
        android:textColor="@color/deep_orange_A700"
        android:background="@drawable/button_border_2"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/descrip3" />
</LinearLayout>