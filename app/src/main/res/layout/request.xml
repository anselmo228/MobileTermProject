<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.MainpageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_id_textview"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"/>
    <ImageButton
        android:id="@+id/image_back"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:src="@drawable/small_image"
        android:background="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/request"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/request_text" />

    </LinearLayout>

    <ImageView
        android:layout_width="346dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="30dp"
        android:src="@drawable/req_desc" />
    <EditText
        android:id="@+id/id_editext"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_border"
        android:hint="100자 내외로 적어주세요. 모든 내용은 익명으로 제보가 됩니다"
        android:padding="5dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="300dp"
            android:layout_height="10dp"
            />
    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_border_2"
        android:text="건의하기"
        android:textColor="@color/red_400"
        android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
